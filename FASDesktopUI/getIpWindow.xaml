<Window x:Class="FASDesktopUI.getIpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FASDesktopUI"
        mc:Ignorable="d"
        Title="IP" Height="150" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="ipInputTextBox" Width="250" Margin="0 0 0 20"/>
            <Button x:Name="submitIpButton" Width="70" Height="25" Click="submitIpButton_Click">
                Хадгалах
            </Button>
        </StackPanel>
        
    </Grid>
</Window>
